<!-- content-section-starts-here -->
<div class="container">
    <div class="main-content">
        <div class="products-grid text-center">
            <header>
                <h3 class="head text-center">Latest Products</h3>
            </header>
            {{#each products as | product productIndex |}}
                <div class="col-md-4 product simpleCart_shelfItem text-center">
                    <a href="/products/id/{{product._id}}"><img src="{{product.images.thumb}}" alt="{{product.name}} at ${{product.price}}"></a>
                    <div class="mask">
                        <a href="/products/id/{{product._id}}">Quick View</a>
                    </div>
                    <a class="product_name" href="/products/id/{{product._id}}">{{product.name}}</a>
                    <p><a class="item_add" href="#"><i></i> <span class="item_price">{{product.price}}</span></a></p>
                </div>
            {{/each}}
            <div class="clearfix"></div>
        </div>
    </div>

</div>
<div class="other-products">
    <div class="container">
        <h3 class="like text-center">Featured Collection</h3>
        <ul id="flexiselDemo3">
            {{#each featured as |item itemIndex|}}
            <li><a href="/products/id/{{item._id}}"><img src="{{item.images.thumb}}" class="img-responsive" alt="{{item.name}}"/></a>
                <div class="product liked-product simpleCart_shelfItem">
                    <a class="like_name" href="/products/id/{{item._id}}">{{item.name}}</a>
                    <p><a class="item_add" href="#"><i></i> <span class=" item_price">${{item.price}}</span></a></p>
                </div>
            </li>
            {{/each}}
        </ul>
        <script type="text/javascript">
            $(window).load(function () {
                $("#flexiselDemo3").flexisel({
                    visibleItems: 4,
                    animationSpeed: 1000,
                    autoPlay: true,
                    autoPlaySpeed: 3000,
                    pauseOnHover: true,
                    enableResponsiveBreakpoints: true,
                    responsiveBreakpoints: {
                        portrait: {
                            changePoint: 480,
                            visibleItems: 1
                        },
                        landscape: {
                            changePoint: 640,
                            visibleItems: 2
                        },
                        tablet: {
                            changePoint: 768,
                            visibleItems: 3
                        }
                    }
                });

            });
        </script>
        <script type="text/javascript" src="/javascripts/jquery.flexisel.js"></script>
    </div>
</div>